@using roadcap.recipes.entities.Models

@model Ingredient

@{
    ViewData["Title"] = "Edit Recipe";
    var action = ViewData["action"] ?? "Edit";
}
    <div class="row">&nbsp;</div>
    <div class="row justify-content-center align-items-center">
        <div class="card">
            <div class="card-header">
                <h4>@Model.IngredientName</h4>
            </div>
            <div class="card-body pl-5 pr-5">
                <div class="row">
                    <form asp-controller="Ingredients" asp-action="@action" method="post">
                        <input type="hidden" asp-for="IngredientId" />
                        <input type="hidden" asp-for="RecipeId" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="IngredientName"></label>
                                    <input asp-for="IngredientName" class="form-control" />
                                    <span asp-validation-for="IngredientName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Amount"></label>
                                    <input asp-for="Amount" class="form-control" />
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-auto"></div>
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label asp-for="Units"></label>
                                    <input asp-for="Units" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="SpecialInstructions"></label>
                                    <input asp-for="SpecialInstructions" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-12">
                                <button type="submit" class="btn btn-success">Save</button>&nbsp;
                                <button type="reset" class="btn btn-danger">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>        
        </div>
    </div>
